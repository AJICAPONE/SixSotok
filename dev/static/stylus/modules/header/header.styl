// ==========================================  Header ================================================//
header
  font-family Circe Light
  padding 23px 0
  //background-color #050505

  .container
    display flex
    align-items flex-end

.icon-logo
  size(200px,55px)

.icon-logo2
  display none



.ss-header-container
  display flex
  justify-content space-between
  align-items center
  width: 100%

.ss-logo-block
  margin-right 80px
  margin-bottom: 25px;
// =====================  Форма поиска по сайту =====================//
.ss-search-module
  position: relative
  display: flex
  justify-content: flex-end
  align-items: center

.ss-search
  width 55%

.ss-search-submit
  position absolute
  background-color transparent
  border none
  padding: 12px 18px
  margin 0

  .icon
    size(20px)
    fill #2E2E2E

.ss-search-field
  background #F4F4F4
  color #ABABAB
  border-radius 24px
  height 48px
  width 100%
  border none
  padding-left 20px

.ss-search-field::placeholder
  color #ABABAB

// =====================  Форма поиска по сайту =====================//

// =====================  Войти - Локация - Телефон =====================//
.ss-shop-items
  display flex
  justify-content space-between
  width 40%
  padding-top: 25px;
  margin-left 30px

.ss-shop--item
  display flex
  font-family "Circe Regular",sans-serif
  height: max-content;
  align-items: center;
  color #2E2E2E

  .icon
    size(19px)
    margin-right: 4px;

.ss-shop--item:nth-child(1)
  cursor pointer
  margin-right 10px

.ss-shop--item-login
  padding: 0;
  margin: 0;
  line-height: 1;
.ss-shop--item:nth-child(2)
  cursor pointer

  .icon
    size(18px,19px)

.ss-shop--item:last-child
  display flex
  flex-direction column
  align-items: flex-end;

.ss-shop--item__city
  font-weight: bold;
  padding: 0;
  margin: 0;
  line-height: 1;
  border-bottom: 1px solid #000;
  height: 15px;

.ss-shop--item__phone
  font-size: 18px;
  font-weight: bold;
  padding: 0;
  margin: 0;
  line-height: 1;

.ss-shop--item__feedback--call
  font-size 14px
  text-decoration underline
  color #5BDF78
