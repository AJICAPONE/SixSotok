// ============================  Скидочная форма ==============================//

.sales-form
  background-size: cover
  height: 359px;
  width: 100%;
  background-repeat: no-repeat;
  margin-top 70px
  border-radius: 30px 0px;
  padding: 70px 15%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin-bottom 90px

.sales-form-title
  font-size 30px
  font-family "Circe Bold",sans-serif
  color #FF4141


.sales--submit
  display flex
  width 100%
  font-family "Circe Bold",sans-serif


.sales-form--submit
  margin-top 20px


.sales-form--submit__input
  font-size: 18px;
  padding: 15px 30px;
  background: #FFFFFF;
  box-shadow: inset 2px 2px 6px rgba(46, 46, 46, 0.2);
  border-radius: 37.5px 0 0 37.5px;
  width 65%
  border none
  color #ADADAD

.sales-form--submit__input:transparent
  color #ADADAD

.sales-form--submit__button
  display block
  width 35%
  background: #5BDF78;
  box-shadow: 2px 10px 16px rgba(91, 223, 120, 0.6);
  border-radius: 30px 0px;
  border none
  transition linear .2s
  margin-left -30px
  color #fff
  font-size: 18px;
  font-family "Circe Bold",sans-serif
  outline none

  &:active
    outline none

  &:hover
    outline none

  &:focus
    outline none

.sales-agree
  margin-top 20px
  position relative
  display flex

.sales-form--agree-checkbox
  position absolute
  opacity 0

.sales-form--agree-checkbox + label
  position: relative;
  cursor: pointer;
  padding: 0;
  margin-bottom 0

  &:before
    content: '';
    margin-right: 10px;
    display: flex;
    width: 20px;
    height: 20px;
    background: #FFFFFF;
    box-shadow: inset 0px 4px 4px rgba(0, 0, 0, 0.25);
    border-radius: 4px;

.sales-form--agree-checkbox:checked + label:after
  content: '';
  position: absolute;
  left: 5px;
  top: 10px;
  background: #5BDF78;
  width: 2px;
  height: 2px;
  box-shadow: -4px 0px 0 #5bdf78, 2px 0px 0 #5bdf78, -2px 0px 0 #5bdf78, 4px 0 0 #5bdf78, 4px -2px 0 #5bdf78, 4px -4px 0 #5bdf78, 4px -6px 0 #5bdf78, 4px -8px 0 #5bdf78, 4px -10px 0 #5bdf78;
  -webkit-transform: rotate(45deg);
  transform: rotate(45deg);

.sales-form--agree-text
  font-size 16px
  font-family "Circe Regular",sans-serif
  color #5E5E5E

.sales-form--agree-text--link
  color #5E5E5E
  text-decoration underline
  padding 0px 5px
// ============================  Скидочная форма ==============================//
