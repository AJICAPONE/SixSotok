.compare-title--list
  position relative

.best-product--item__img-compare
  width 150px
  height: auto

.best-product--item-compare
  position relative
  background: #DAFFD3;
  border-radius: 30px 0px;
  margin: 0 15px;
  font-size 12px

.compare-product--all__items
  float right

.best-product--item__link--wrap-compare
  background: #F2FFF0;
  border-radius: 30px 0px;

.best-product--info-compare
  padding 10px
  display flex
  flex-direction column

.best-product--info__price-quantity-compare .best-product--info__price
  font-size 16px

.best-product--info__price-quantity-compare
  display flex
  justify-content space-between
  margin-bottom 10px

.compare--quantity-input
  height 20px
  width 30px

.compare--add,.compare--sub
  height 20px !important
  width 20px !important

.best-product--info-compare .best-product--info__in-stock
  margin-bottom 0
  margin-top 8px

.best-product--info__link-compare
  font-family "Circe Bold",sans-serif

.best-product--item-closs--compare
  size(18px)
  background-color #888888
  position absolute
  border-radius 50%
  padding 5px
  right: -5px;
  top: 5px;

  .icon
    size 15px
    fill #fff
    size(7px)
    absolute-center()

.added-for-pic-compare
  padding 10px

.compare-controls
  position: absolute;
  top: 50%;
  display: flex;
  justify-content: space-between;
  width: 100%;
  margin: 0 -15px;

.compare--content
  display flex
  justify-content flex-end

.all-compare-controls svg
  color: #5BDF78;
  font-size 45px
  cursor pointer
.compare-desktop__item
  display flex
.compare-desktop__item__name
  display flex
  font-size 16px
  font-family "Circe Bold",sans-serif


.compare-desktop__item__name
  width 100%

.compare-desktop__item__js-item
  width 100%
  margin 0 15px
  font-size 14px
  font-family "Circe Regular",sans-serif
  padding-left 10px
  padding-right 10px

.compare-desktop__item
  border-radius: 30px 0px;
  border 1px solid #AFF2B4
  margin-top 15px

.compare-all-list
  padding 20px 0px

.compare-desktop__item__name
  background: #AFF2B4;
  border-radius: 30px 0px;
  padding 12px 0
  text-align: center;
  display: flex;
  align-items: center;
  padding-left 10px
  font-size 14px





