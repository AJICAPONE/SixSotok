.register-login-data
  background: #EBFCE8;
  border-radius: 24px 0px;
  padding 20px
  max-width 430px

  h5
    margin-bottom 12px
.register-login-data--info
  display flex
  flex-direction column

  input
    margin-bottom 20px

.register-login--button
  background-color #5bdf78;
  border: 1px solid #5bdf78
  color #fff

.register-forget-pass--wrap
  display flex
  flex-direction column
  font-family "Circe Regular",sans-serif
  padding-top 15px

.register-login-forget-pass
  line-height 0.8
  border-bottom 1px solid #2e2e2e
  width max-content

.register-login--button-gray
  background-color #C4C4C4
  color #fff
  border 1px solid #C4C4C4
  box-shadow none

.register-login-label3

  input
    margin-bottom 0
    background: #FFEDED;
    box-shadow: inset 1px 2px 10px rgba(46, 46, 46, 0.2);
    color #888888

  label
    font-family "Circe Light",sans-serif
    color #FF4141

.green-register-phone
  color #5BDF78

.green-register-phone--margin
  margin-bottom 3px !important
  font-size 18px !important
.register-login--button-green
  background-color #5BDF78
  color #fff

