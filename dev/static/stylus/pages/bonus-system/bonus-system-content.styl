.bonus-system--content
  font-family "Circe Regular",sans-serif


.bonus-system--items
  display flex
  flex-direction column

.bonus-system--baner
  padding: 75px 300px 50px 50px;
  border-radius: 30px 0px;

.use-bonus-system
  background: #5BDF78;
  box-shadow: 2px 10px 16px rgba(91, 223, 120, 0.6);
  border-radius: 30px 0px;
  font-size 24px
  padding 20px 40px
  display block
  color #fff
  font-family "Circe Bold",sans-serif
  transition linear .2s
  text-align center
  max-width 330px

  &:hover
    color #fff
    background-color #ff4141
    box-shadow: 2px 4px 12px rgba(255,65,65,0.4);

  &:active
    color #fff
    background-color #ff4141
    box-shadow: inset 0px 4px 12px 2px rgba(196,24,24,0.5)




